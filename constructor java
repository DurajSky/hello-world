public class Film {

    public String tytuł;
    public String reżyser;
    public float długośćFilmu;
    public int ocena;

    public Film(){
        tytuł = "Jak oszukiwac na naprawach - poradnik mechanika";
        reżyser = "Andrzej Nycz";
        długośćFilmu = 0.5f;
        ocena = 7;
    }
    public String getReżyser() {
        return reżyser;
    }

    public String getTytuł() {
        return tytuł;
    }
    public int getOcena(){
        return ocena;
    }

    public float getDługośćFilmu() {
        return długośćFilmu;
    }

    public Film (String tytuł, String reżyser,float długośćFilmu,int ocena){
        this.tytuł = tytuł;
        this.reżyser = reżyser;
        this.długośćFilmu=długośćFilmu;
        this.ocena = ocena;
    }
}
